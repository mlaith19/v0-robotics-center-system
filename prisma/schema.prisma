generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id              String   @id @default(cuid())
  name            String
  idNumber        String?
  birthDate       String?
  email           String?  @unique
  phone           String?
  address         String?
  city            String?
  father          String?
  mother          String?
  additionalPhone String?
  healthFund      String?
  allergies       String?
  status          String   @default("מתעניין")
  totalSessions   Int      @default(12)

  // הישן - אפשר להשאיר זמנית כדי לא לשבור מסכים קיימים
  courseIds       String[] @default([])
  courseSessions  Json?

  // Relations (חדש)
  enrollments     Enrollment[]
  payments        Payment[]
  attendances     Attendance[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Teacher {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id          String       @id @default(cuid())
  name        String

  // Relations
  enrollments Enrollment[]
  payments    Payment[]
  attendances Attendance[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Enrollment {
  id        String   @id @default(cuid())

  studentId String
  courseId  String

  // יתרת מפגשים לתלמיד בקורס הזה
  sessionsLeft Int @default(0)

  joinedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
}

model Payment {
  id        String   @id @default(cuid())

  studentId String
  courseId  String?  // אם תשלום כללי בלי קורס – יכול להיות null

  amount    Int
  method    String?  // "אשראי" / "מזומן" / "העברה"
  status    String   @default("שולם") // "שולם" / "ממתין" / "בוטל"
  note      String?

  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())

  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course    Course?  @relation(fields: [courseId], references: [id], onDelete: SetNull)

  @@index([studentId])
  @@index([courseId])
  @@index([paidAt])
}

model Attendance {
  id        String   @id @default(cuid())

  studentId String
  courseId  String

  date      DateTime @default(now())
  status    String   @default("נוכח") // "נוכח" / "נעדר" / "איחור"
  minutes   Int      @default(0)
  note      String?

  createdAt DateTime @default(now())

  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([courseId])
  @@index([date])
}
